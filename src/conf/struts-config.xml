<?xml version="1.0" encoding="ISO-8859-1" ?> 

<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<!-- ================================================ Form Bean Definitions -->
    <form-beans>
        <form-bean
         name="BeanVars"
         type="com.project.forms.ParseBeanForm"/>
         <form-bean
         name="JspWriteForm"
         type="com.project.forms.JspWriteForm"/>
    </form-beans>


	<!-- =========== Global Exception Definitions -->

	<global-exceptions>

	</global-exceptions>


	<!-- =========== Global Forward Definitions -->

	<!-- <global-forwards>
		<forward name="welcome"  path="/display" />
	</global-forwards> --> 


	<!-- ============ Action Mapping Definitions -->

	<action-mappings>
		<action path="/display" type="org.apache.struts.actions.ForwardAction" forward="/WEB-INF/mockUpTest.jsp"></action>
		<action
		path="/ParseBean"
		type="com.project.actions.ParseBeanAction"
		name="BeanVars"
		scope="request"
		validate="false"
		input="/WEB-INF/mockUpTest.jsp">
			<forward name="success" path="/WEB-INF/content/pages/dashboard/mainJsp.jsp"/>
	    	<forward name="display" path="/WEB-INF/mockUpTest.jsp"/>
		</action>
		<action
		path="/JspWrite"
		type="com.project.actions.JspWriteAction"
		name="JspWriteForm"
		scope="request"
		validate="false"
		input="/WEB-INF/content/pages/dashboard/mainJsp.jsp">
			<forward name="success" path="/WEB-INF/mockUpTest.jsp"/>
	    	<forward name="error" path="/WEB-INF/content/pages/dashboard/mainJsp.jsp"/>
		</action>
	</action-mappings>
	

	
	<!-- ========= Message Resources Definitions -->

	<message-resources parameter="ApplicationResources" null="false" />

	<!-- ========= Validator plugin -->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml" />
	</plug-in>

</struts-config>
