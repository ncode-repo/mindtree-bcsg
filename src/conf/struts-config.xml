<?xml version="1.0" encoding="ISO-8859-1" ?> 

<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<!-- ================================================ Form Bean Definitions -->
    <form-beans>
        <form-bean
         name="ParseBeanForm"
         type="com.project.forms.ParseBeanForm"/>
         <form-bean
         name="JspWriteForm"
         type="com.project.forms.JspWriteForm"/>
    </form-beans>
	<!-- ============ Action Mapping Definitions -->
	<action-mappings>
		<action path="/welcome" forward="/WEB-INF/content/pages/uploadBean.jsp"></action>
		<action
		path="/parseBean"
		type="com.project.actions.ParseBeanAction"
		name="ParseBeanForm"
		scope="request">
			<forward name="success" path="/WEB-INF/content/pages/renderJsp.jsp"/>
	    	<forward name="error" path="/WEB-INF/content/pages/uploadBean.jsp"/>
		</action>
		<action
		path="/jspWrite"
		type="com.project.actions.JspWriteAction"
		name="JspWriteForm"
		scope="request">
			<forward name="success" path="/WEB-INF/content/pages/uploadBean.jsp"/>
	    	<forward name="error" path="/WEB-INF/content/pages/renderJsp.jsp"/>
		</action>
	</action-mappings>
</struts-config>
