<?xml version="1.0" encoding="ISO-8859-1" ?> 

<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<!-- ================================================ Form Bean Definitions -->
    <form-beans>
     <form-bean name="UserDetailsForm" type="com.subscribe.UserDetailsActionForm"/>
     <form-bean name="SubscribeForm" type="com.subscribe.SubscribeActionForm"/>
     <form-bean name="LoginForm" type="com.subscribe.LoginForm"/>
      <form-bean name="CancelActionForm" type="com.subscribe.CancelActionForm"/>
    </form-beans>
	<!-- ============ Action Mapping Definitions -->
	<action-mappings>
		<action path="/welcome" forward="/WEB-INF/content/pages/profile.jsp"></action>
		
		<action path="/profile" name="UserDetailsForm" scope="session" type="com.actions.UserDetailsAction" >
		<forward name="subscribe" path="/WEB-INF/content/pages/appDetails.jsp"></forward>
		</action>
		
		<action path="/getAppsDet" name="SubscribeForm" type="com.actions.SubscribeAction" >
		<forward name="failure"  path="/WEB-INF/content/pages/appDetails.jsp" />
		<forward name="success"  path="/WEB-INF/content/pages/serviceSuccess.jsp" />
		</action>
		
		<action path="/editSub" forward="/WEB-INF/content/pages/editSubsctiption.jsp"></action>
		
		<action path="/manSub" forward="/WEB-INF/content/pages/manageSubsctiption.jsp"></action>
		
		<action path="/appSus" forward="/WEB-INF/content/pages/serviceSuccess.jsp"></action>
		
		<action path="/login" scope="session" name="LoginForm" type="com.actions.LoginAction">
		<forward name="success"  path="/WEB-INF/content/pages/dashboard.jsp" />
		<forward name="failure"  path="/WEB-INF/content/pages/serviceSuccess.jsp" />
		</action>
		<action path="/cancel" scope="request" name="CancelActionForm" type="com.actions.CancelSubscriptionAction">
		<forward name="success"  path="/login.do" />
		<forward name="failure"  path="/WEB-INF/content/pages/serviceSuccess.jsp" />
		<forward name="modify"  path="/WEB-INF/content/pages/editSubsctiption.jsp" />
		<forward name="successm"  path="/WEB-INF/content/pages/editSubsctiption.jsp" />
		</action>
		
	</action-mappings>
	<message-resources
		parameter="ApplicationResources" null="false"/>
</struts-config>
